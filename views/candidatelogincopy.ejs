    <div class="login-container">
        <div class="text-center">
            <!-- Add your company logo image here -->
            <img src="\uploads\algodomain-logo.jpg" alt="Company Logo" width="100">
            <h2>Login</h2>
        </div>
        <form action="http://testmaster.algodomain.in/testmaster/api/exam" method="post"  id="loginForm">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="securityCode">Security Code:</label>
                <input type="number" class="form-control" id="securityCode" name="securityCode" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
